@model GestionEscuelaTarea.Models.Curso
@{
    ViewData["Title"] = "Editar Materia";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Actualizar Información de la Materia</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="NombreCurso" class="form-label fw-bold">Nombre de la Materia</label>
                                <input asp-for="NombreCurso" class="form-control" />
                                <span asp-validation-for="NombreCurso" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Codigo" class="form-label fw-bold">Código</label>
                                <input asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Creditos" class="form-label fw-bold">Número de Créditos</label>
                            <input asp-for="Creditos" type="number" class="form-control" />
                            <span asp-validation-for="Creditos" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción Actualizada</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">Actualizar Registro</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar Cambios</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>