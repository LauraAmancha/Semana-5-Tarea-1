@model GestionEscuelaTarea.Models.Curso
@{
    ViewData["Title"] = "Nuevo Curso";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-journal-plus"></i> Registrar Nueva Materia</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="NombreCurso" class="form-label fw-bold">Nombre de la Materia</label>
                                <input asp-for="NombreCurso" class="form-control" placeholder="Ej: Programación Visual" />
                                <span asp-validation-for="NombreCurso" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Codigo" class="form-label fw-bold">Código</label>
                                <input asp-for="Codigo" class="form-control" placeholder="PROG-101" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Creditos" class="form-label fw-bold">Número de Créditos</label>
                            <input asp-for="Creditos" type="number" class="form-control" />
                            <span asp-validation-for="Creditos" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción del Curso</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Breve resumen del contenido..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Guardar Materia</button>
                            <a asp-action="Index" class="btn btn-link text-decoration-none">Volver al Listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}