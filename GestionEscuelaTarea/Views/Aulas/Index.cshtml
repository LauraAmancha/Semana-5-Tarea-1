@model IEnumerable<GestionEscuelaTarea.Models.Aula>
@{
    ViewData["Title"] = "Gestión de Aulas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-door-open"></i> Listado de Aulas</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg"></i> Registrar Nueva Aula
    </a>
</div>

<table class="table table-striped table-hover shadow-sm bg-white border">
    <thead class="table-dark">
        <tr>
            <th>Nombre del Aula</th>
            <th>Ubicación</th>
            <th>Capacidad</th>
            <th class="text-center">Proyector</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@item.Nombre</td>
                <td>@item.Ubicacion</td>
                <td><span class="badge bg-secondary">@item.Capacidad personas</span></td>
                <td class="text-center">
                    @if (item.TieneProyector)
                    {
                        <span class="text-success">✅ Sí</span>
                    }
                    else
                    {

                        <span class="text-danger">❌ No</span>
                    }
                </td>
                <td class="text-center">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>