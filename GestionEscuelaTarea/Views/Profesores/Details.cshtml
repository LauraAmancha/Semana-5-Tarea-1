@model GestionEscuelaTarea.Models.Profesor
@{
    ViewData["Title"] = "Perfil del Profesor";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-person-vcard"></i> Ficha del Docente</h4>
        </div>
        <div class="card-body py-4">
            <div class="row align-items-center">
                <div class="col-md-3 text-center border-end">
                    <i class="bi bi-person-badge display-1 text-primary"></i>
                </div>
                <div class="col-md-9 ps-4">
                    <h2 class="fw-bold">@Model.Nombre</h2>
                    <span class="badge bg-primary fs-6 mb-3">@Model.Especialidad</span>
                    <hr />
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="text-muted mb-1">Contacto Telefónico:</p>
                            <p class="fw-bold"><i class="bi bi-telephone"></i> @Model.Telefono</p>
                        </div>
                        <div class="col-sm-6">
                            <p class="text-muted mb-1">Correo Electrónico:</p>
                            <p class="fw-bold"><i class="bi bi-envelope"></i> @Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Regresar</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4">Editar Perfil</a>
        </div>
    </div>
</div>