@model GestionEscuelaTarea.Models.Profesor
@{
    ViewData["Title"] = "Eliminar Docente";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-person-x"></i> Retirar Docente del Sistema</h4>
        </div>
        <div class="card-body p-4 text-center">
            <div class="alert alert-warning border-danger">
                <h5 class="fw-bold text-danger">¿Está seguro de eliminar a este profesor?</h5>
                <p class="mb-0">Esta acción es irreversible y el docente ya no aparecerá en la planta activa.</p>
            </div>

            <div class="bg-light p-3 rounded border mb-4">
                <h4 class="mb-1">@Model.Nombre</h4>
                <p class="text-muted mb-0"><strong>Especialidad:</strong> @Model.Especialidad</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 shadow">Confirmar Eliminación</button>
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-link text-decoration-none text-muted">No eliminar, volver</a>
                </div>
            </form>
        </div>
    </div>
</div>