@model GestionEscuelaTarea.Models.Profesor
@{
    ViewData["Title"] = "Nuevo Profesor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-person-vcard"></i> Registro de Personal Docente</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombres y Apellidos</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Ing. Darwin Moyano" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Especialidad" class="form-label fw-bold">Área de Especialidad</label>
                            <input asp-for="Especialidad" class="form-control" placeholder="Ej: Seguridad Informática / Desarrollo" />
                            <span asp-validation-for="Especialidad" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label fw-bold">Teléfono / Celular</label>
                                <input asp-for="Telefono" class="form-control" placeholder="099..." />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold">Email Institucional</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="ejemplo@uniandes.edu.ec" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow">Guardar Profesor</button>
                            <a asp-action="Index" class="btn btn-link text-muted">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}