@model IEnumerable<GestionEscuelaTarea.Models.Profesor>
@{
    ViewData["Title"] = "Gestión de Docentes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-workspace"></i> Planta Docente</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-person-plus-fill"></i> Registrar Nuevo Profesor
    </a>
</div>

<table class="table table-striped table-hover shadow-sm bg-white border">
    <thead class="table-dark">
        <tr>
            <th>Nombre Completo</th>
            <th>Especialidad</th>
            <th>Teléfono</th>
            <th>Correo Electrónico</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@item.Nombre</td>
                <td><span class="badge bg-info text-dark">@item.Especialidad</span></td>
                <td>@item.Telefono</td>
                <td><a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a></td>
                <td class="text-center">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>