@model GestionEscuelaTarea.Models.Estudiante
@{
    ViewData["Title"] = "Ficha del Estudiante";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-person-badge"></i> Perfil del Estudiante</h4>
        </div>
        <div class="card-body py-4">
            <div class="row align-items-center">
                <div class="col-md-3 text-center border-end">
                    <i class="bi bi-person-circle display-1 text-secondary"></i>
                </div>
                <div class="col-md-9 ps-4">
                    <h2 class="text-primary fw-bold">@Model.Nombre @Model.Apellido</h2>
                    <hr />
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Cédula:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Cedula</dd>

                        <dt class="col-sm-4 text-muted">Correo:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Volver</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4">Editar Perfil</a>
        </div>
    </div>
</div>