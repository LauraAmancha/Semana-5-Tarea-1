@model IEnumerable<GestionEscuelaTarea.Models.Matricula>
@{
    ViewData["Title"] = "Control de Matrículas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-mortarboard"></i> Registro de Matrículas</h1>
    <a asp-action="Create" class="btn btn-warning shadow-sm fw-bold">
        <i class="bi bi-plus-circle"></i> Nueva Matrícula
    </a>
</div>

<table class="table table-striped table-hover shadow-sm bg-white border">
    <thead class="table-dark">
        <tr>
            <th>Fecha de Registro</th>
            <th>Periodo Académico</th>
            <th class="text-center">Nota Final</th>
            <th class="text-center">Estado de Pago</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td><span class="badge bg-secondary">@item.Periodo</span></td>
                <td class="text-center fw-bold text-primary">@item.NotaFinal.ToString("0.00")</td>
                <td class="text-center">
                    @if (item.EstaPagado)
                    {
                        <span class="badge bg-success">PAGADO</span>
                    }
                    else
                    {

                        <span class="badge bg-danger">PENDIENTE</span>
                    }
                </td>
                <td class="text-center">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>