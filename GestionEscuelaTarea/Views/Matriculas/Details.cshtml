@model GestionEscuelaTarea.Models.Matricula
@{
    ViewData["Title"] = "Detalle de Matrícula";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-file-earmark-text"></i> Resumen de Inscripción</h4>
        </div>
        <div class="card-body py-4">
            <div class="row">
                <div class="col-sm-6 border-end">
                    <p class="text-muted mb-1">Fecha de Inscripción</p>
                    <h5 class="fw-bold">@Model.Fecha.ToLongDateString()</h5>
                    <p class="text-muted mt-3 mb-1">Periodo Correspondiente</p>
                    <h5 class="text-primary">@Model.Periodo</h5>
                </div>
                <div class="col-sm-6 text-center">
                    <p class="text-muted mb-1">Estado de Pago</p>
                    @if (Model.EstaPagado)
                    {
                        <h4 class="text-success fw-bold"><i class="bi bi-patch-check"></i> CANCELADO</h4>
                    }
                    else
                    {
                        <h4 class="text-danger fw-bold"><i class="bi bi-clock-history"></i> PENDIENTE</h4>
                    }
                    <hr />
                    <p class="text-muted mb-1">Calificación Registrada</p>
                    <h2 class="display-6 fw-bold">@Model.NotaFinal.ToString("0.00")</h2>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Volver</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4 fw-bold">Editar Registro</a>
        </div>
    </div>
</div>