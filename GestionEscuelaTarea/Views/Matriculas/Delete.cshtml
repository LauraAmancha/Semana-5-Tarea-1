@model GestionEscuelaTarea.Models.Matricula
@{
    ViewData["Title"] = "Eliminar Matrícula";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-trash3"></i> Anular Matrícula</h4>
        </div>
        <div class="card-body p-4 text-center">
            <div class="alert alert-danger">
                <h5 class="fw-bold">¿Realmente desea anular esta matrícula?</h5>
                <p class="mb-0">Este proceso eliminará el registro académico del estudiante en este periodo.</p>
            </div>

            <div class="bg-light p-3 rounded border mb-4">
                <p class="mb-1"><strong>Periodo:</strong> @Model.Periodo</p>
                <p class="mb-0"><strong>Fecha de registro:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 shadow">Confirmar Anulación</button>
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-link text-decoration-none text-muted">Cancelar y regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>