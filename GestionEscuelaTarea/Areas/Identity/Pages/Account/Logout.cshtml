@page
@model LogoutModel
@{
    ViewData["Title"] = "Sesión Cerrada";
}

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-6 border p-5 shadow-sm bg-white">
            <h1 class="display-4 text-success"><i class="bi bi-check-circle"></i></h1>
            <header>
                <h2>@ViewData["Title"]</h2>
                <p class="lead">Has salido del sistema de forma segura.</p>
                <hr />
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Volver al Inicio</a>
            </header>
        </div>
    </div>
</div>